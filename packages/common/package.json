{
  "name": "@evolu/common",
  "version": "6.0.0",
  "description": "TypeScript library and local-first framework",
  "keywords": [
    "evolu",
    "local-first",
    "sqlite",
    "crdt",
    "e2ee"
  ],
  "author": "Daniel Steigerwald <daniel@steigerwald.cz>",
  "license": "MIT",
  "repository": "evoluhq/evolu",
  "bugs": {
    "url": "https://github.com/evoluhq/evolu/issues"
  },
  "homepage": "https://evolu.dev",
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "browser": "./dist/src/index.js",
      "react-native": "./dist/src/index.js"
    },
    "./evolu": {
      "import": "./dist/src/Evolu/Internal.js"
    }
  },
  "typesVersions": {
    "*": {
      "evolu": [
        "./dist/src/Evolu/Internal.d.ts"
      ]
    }
  },
  "files": [
    "dist/src/**",
    "src/**",
    "README.md"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "shx rm -rf dist ./README.md && tsc && shx cp ../../README.md ./",
    "test": "vitest --disableConsoleIntercept",
    "clean": "shx rm -rf .turbo node_modules dist",
    "format": "prettier --write \"src/*.{ts,tsx,md}\"",
    "bench": "vitest bench"
  },
  "dependencies": {
    "@noble/ciphers": "^1.3.0",
    "@noble/hashes": "^1.8.0",
    "@scure/bip39": "^1.6.0",
    "kysely": "^0.28.2",
    "msgpackr": "^1.11.4",
    "nanoid": "^3.3.11",
    "random": "^5.4.0"
  },
  "devDependencies": {
    "@bokuweb/zstd-wasm": "0.0.27",
    "@evolu/tsconfig": "workspace:*",
    "@types/better-sqlite3": "^7.6.13",
    "@types/ws": "^8.18.1",
    "better-sqlite3": "^11.10.0",
    "shx": "^0.3.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2",
    "ws": "^8.18.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "sideEffects": []
}
