{
  "private": true,
  "name": "@evolu/monorepo",
  "scripts": {
    "dev": "turbo dev --concurrency=13",
    "build": "turbo build --concurrency=13",
    "start": "turbo start --concurrency=13",
    "lint": "turbo lint --concurrency=13",
    "test": "turbo test --concurrency=13",
    "clean": "turbo clean --concurrency=13 && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "version": "changeset version && pnpm install --no-frozen-lockfile && pnpm format",
    "release": "pnpm run build && changeset publish",
    "ios": "cd apps/native && pnpm ios",
    "android": "cd apps/native && pnpm android"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "eslint": "^8.50.0",
    "eslint-config-evolu": "workspace:*",
    "prettier": "^3.0.3",
    "turbo": "^1.10.14"
  },
  "packageManager": "pnpm@8.6.6",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    }
  }
}
