{
  "private": true,
  "name": "@evolu/monorepo",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=!native",
    "dev:native": "turbo dev --filter=!web",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "version": "changeset version && pnpm install --no-frozen-lockfile && pnpm format",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "eslint": "^8.44.0",
    "eslint-config-evolu": "workspace:*",
    "prettier": "^3.0.0",
    "turbo": "^1.10.7"
  },
  "packageManager": "pnpm@8.6.6",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    }
  }
}
