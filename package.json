{
  "private": true,
  "name": "@evolu/monorepo",
  "scripts": {
    "dev": "turbo --filter @evolu/* dev --filter web --concurrency=11",
    "build": "turbo --filter @evolu/* build",
    "build:web": "pnpm typedoc && turbo --filter web build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "start": "turbo start",
    "//lint": "No --cache: typescript-eslint doesn't recommend it due to cross-file dependencies",
    "lint": "eslint",
    "lint-monorepo": "pnpm dlx sherif@latest",
    "circular": "pnpm --filter '@evolu/*' --filter '!@evolu/tsconfig' exec dpdm --no-warning --no-tree -T --exit-code circular:1 'src/**/*.ts'",
    "verify": "pnpm build && pnpm examples:build && pnpm lint && pnpm lint-monorepo && pnpm circular && pnpm typedoc && pnpm test",
    "clean": "turbo clean && shx rm -rf node_modules pnpm-lock.yaml .turbo .eslintcache out",
    "format": "prettier --write \"**/*.{ts,tsx,js,mjs,md,mdx}\"",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish",
    "ios": "cd examples/react-expo && pnpm ios",
    "android": "cd examples/react-expo && pnpm android",
    "typedoc": "typedoc && pnpm --filter=web run fix:docs",
    "bench": "turbo bench",
    "examples:toggle-deps": "tsx ./scripts/toggle-examples-deps.ts",
    "examples:build": "turbo --filter @example/* build",
    "examples:react-nextjs:dev": "turbo --filter @example/react-nextjs dev",
    "examples:react-vite-pwa:dev": "turbo --filter @example/react-vite-pwa dev",
    "examples:svelte-vite-pwa:dev": "turbo --filter @example/svelte-vite-pwa dev",
    "publish:local": "tsx ./scripts/publish-local.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.36.0",
    "@types/inquirer": "^9.0.9",
    "@typescript-eslint/parser": "^8.44.1",
    "dpdm": "^3.14.0",
    "eslint": "9.38.0",
    "eslint-plugin-jsdoc": "^61.0.0",
    "eslint-plugin-react-hooks": "^7.0.0",
    "inquirer": "^12.9.6",
    "prettier": "^3.6.2",
    "prettier-plugin-embed": "^0.5.0",
    "prettier-plugin-jsdoc": "^1.3.3",
    "prettier-plugin-sql-cst": "^0.14.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "shx": "^0.4.0",
    "tsx": "^4.20.5",
    "turbo": "^2.5.8",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.20.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "better-sqlite3",
      "electron",
      "electron-winstaller",
      "esbuild",
      "msgpackr-extract",
      "sharp",
      "unrs-resolver"
    ],
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    }
  }
}
