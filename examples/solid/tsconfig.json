{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
    "skipLibCheck": true,

		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"types": ["vinxi/client", "vite/client"],
		"isolatedModules": true,
		"paths": {
      "~/*": ["./src/*"]
    }
	}
}
